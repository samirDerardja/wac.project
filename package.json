{
  "name": "tovo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "compile:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:ssr": "node dist/server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "build:client-and-server-bundles": "ng build --prod && ng run tovo:server:production"
  },
  "private": true,
  "dependencies": {
    "@agm/core": "^1.0.0-beta.6",
    "@angular/animations": "^8.0.0",
    "@angular/cdk": "^8.0.1",
    "@angular/common": "^8.0.0",
    "@angular/compiler": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "@angular/platform-browser": "^8.0.0",
    "@angular/platform-browser-dynamic": "^8.0.0",
    "@angular/platform-server": "^8.0.0",
    "@angular/router": "^8.0.0",
    "@ng-bootstrap/ng-bootstrap": "^4.2.1",
    "@nguniversal/express-engine": "^7.0.2",
    "@nguniversal/module-map-ngfactory-loader": "v7.0.2",
    "@nicky-lenaers/ngx-scroll-to": "^2.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/googlemaps": "^3.36.4",
    "bcrypt": "^3.0.6",
    "bootstrap": "^4.3.1",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.6.9",
    "crypto-js": "^3.1.9-1",
    "express": "^4.15.2",
    "font-awesome": "^4.7.0",
    "jest-cli": "^24.9.0",
    "jquery": "^3.4.1",
    "magnific-popup": "^1.1.0",
    "ngx-cookie-service": "^2.2.0",
    "ngx-owl-carousel-o": "^1.1.5",
    "ngx-page-scroll": "^6.0.2",
    "ngx-page-scroll-core": "^6.0.2",
    "popper.js": "^1.15.0",
    "rxjs": "^6.5.2",
    "save": "^2.4.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.9.1"
  },
  "devDependencies": {
    "@angular-builders/jest": "^8.2.0",
    "@angular-devkit/build-angular": "~0.800.2",
    "@angular/cli": "^8.0.2",
    "@angular/compiler-cli": "^8.0.0",
    "@angular/language-service": "^8.0.0",
    "@types/jasminewd2": "~2.0.6",
    "@types/jest": "^24.0.18",
    "@types/jquery": "^3.3.31",
    "@types/node": "~12.0.7",
    "codelyzer": "~5.1.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.9.0",
    "jest-preset-angular": "^7.1.1",
    "protractor": "~5.4.2",
    "ts-loader": "^5.2.0",
    "ts-node": "~8.2.0",
    "tslint": "~5.17.0",
    "typescript": "^3.4.5",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setupJest.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx|angular2-ui-switch|ng-dynamic)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json",
        "diagnostics": false,
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "<rootDir>/node_modules/jest-preset-angular/InlineHtmlStripStylesTransformer"
        ],
        "testMatch": [
          "<rootDir>/src/**/__tests__/**/*.[jt]s?(x)",
          "<rootDir>/src/**/*(*.)@(spec|test).[tj]s?(x)"
        ],
        "testPathIgnorePatterns": [
          "/node_modules/",
          "<rootDir>/src/tests/setupJest.ts"
        ],
        "setupFiles": [
          "<rootDir>/src/tests/Setup"
        ]
      }
    }
  }
}
